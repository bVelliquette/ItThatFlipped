<UserControl x:Class="ItThatFlipped.Views.Breachstones"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ItThatFlipped.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid Background="#FF2C2C2C">
        <TextBlock Background="Black" Margin="0,74,0,0" x:Name="TestBox" Foreground="White" FontSize="20" Height="302" VerticalAlignment="Top" HorizontalAlignment="Center" Width="570"/>
        <Button Content="Refresh" Click="UpdateBreachstones" Foreground="{x:Null}" Margin="0,12,115,0" Height="57" VerticalAlignment="Top" HorizontalAlignment="Right" Width="64">
            <Button.Background>
                <ImageBrush ImageSource="/Reload.png"/>
            </Button.Background>
        </Button>
        <TextBlock HorizontalAlignment="Left" Margin="115,23,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="31" Width="501" x:Name="Status" Foreground="#FFB60000"/>
    </Grid>
</UserControl>
